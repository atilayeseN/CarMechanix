@model OilContRM.Models.ModalData
@{
    Layout = null;
}
<div class="row">
    <div class="col-12">
        <div class="card-box">

            @using (@Html.BeginForm("AddProcessFromModal", "Process"))
            {
                <div class="row">
                    <div class="col-12">
                        <div class="p-20">
                            <div class="form-group row">
                                <label class="col-2 col-form-label">@Resources.Content.ChooseLicencePlate</label>
                                <div class="col-10">
                                    @Html.DropDownListFor(m => m.licence, (List<SelectListItem>)ViewBag.Licence, new { @class = "form-control" })
                                </div>
                            </div>


                            <div class="form-group row">
                                <label class="col-2 col-form-label">@Resources.Content.ChooseProduct</label>
                                <div class="col-10">
                                    @Html.DropDownListFor(m => m.product, (List<SelectListItem>)ViewBag.Products, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-2 col-form-label">@Resources.Content.ChooseType</label>
                                <div class="col-10">
                                    @Html.DropDownListFor(m => m.type, (List<SelectListItem>)ViewBag.Types, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-2 col-form-label">@Resources.Content.Description</label>
                                <div class="col-10">
                                    @Html.TextBoxFor(m => m.description, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-2 col-form-label">@Resources.Content.Details</label>
                                <div class="col-10">
                                    @Html.TextAreaFor(m => m.details, new { @class = "form-control" })
                                </div>
                            </div>







                            <button class="btn btn-primary" type="submit">Add</button>



                        </div>
                    </div>

                </div>
            }
            <!-- end row -->

        </div> <!-- end card-box -->
    </div><!-- end col -->
</div>