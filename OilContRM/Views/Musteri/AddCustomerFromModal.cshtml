@{ 
    Layout = null;
}

<div class="row">
    <div class="col-12">
        <div class="card-box">


            <div class="row">
                <div class="col-12">
                    <div class="p-20">
                        <form class="form-horizontal" role="form" action="AddCustomerFromModal" method="post">
                            <div class="form-group row">
                                <label class="col-2 col-form-label" for="name">@Resources.Content.Name</label>
                                <div class="col-10">
                                    <input type="text" class="form-control" name="name" maxlength="50" required="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-2 col-form-label" for="surname">@Resources.Content.Surname</label>
                                <div class="col-10">
                                    <input type="text" name="surname" class="form-control" maxlength="50" required="">
                                </div>
                            </div>


                            <div class="form-group row">
                                <label class="col-2 col-form-label" for="tel">@Resources.Content.Telephone</label>
                                <div class="col-md-10">
                                    <input class="form-control" type="tel" maxlength="11" name="tel">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-2 col-form-label" for="email">@Resources.Content.Email</label>
                                <div class="col-md-10">
                                    <input class="form-control" type="email" maxlength="320" name="email">
                                </div>
                            </div>



                            <button class="btn btn-primary" type="submit">@Resources.Content.Add</button>
                        </form>

                    </div>
                </div>

            </div>
            <!-- end row -->

        </div> <!-- end card-box -->
    </div><!-- end col -->
</div>



